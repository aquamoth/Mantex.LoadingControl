<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mantex</title>
    @Styles.Render("~/Content/css")
    @Html.EmitRequiredStyles()
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-default navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "" })">
                    <img alt="Mantex" src="~/Content/mantex_logotype.png" style="height:25px">
                    <p>Lossningskontroll</p>
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Startsida", "Index", "Home")</li>
                    <li>@Html.ActionLink("Lossning", "Index", "Loading")</li>
                    @*<li>@Html.ActionLink("Om...", "About", "Home")</li>
                        <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>*@
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><label class="navbar-text">Welcome, @User.Identity.Name</label></li>
                        <li>@Html.ActionLink("Log off", "LogOff", "Account")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Log on", "LogOn", "Account")</li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-right">&copy; @DateTime.Now.Year - Powered by <a href="http://www.mantex.se" target="_blank">Mantex AB</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Html.EmitRequiredScripts()
    @RenderSection("scripts", required: false)
</body>
</html>

@{
    ViewBag.Title = "Loading";
}

<div class="row">
    <div class="col-sm-4">

        <form role="form">
            <div class="form-group">
                <label for="TransactionSelect">Select Transaction:</label>
                <select id="TransactionSelect" class="form-control disabled">
                    <option value="873218">Sunnanö Boat Everst #27</option>
                    <option value="873219">Sunnanö Boat Alfred</option>
                    <option value="873220">Sunnanö Boat Lollipop</option>
                    <option value="873221">Sunnanö Boat Mandarin #1</option>
                    <option value="873222">Sunnanö Boat Russian Velvet</option>
                </select>
            </div>

            <div class="form-group">
                <button class="btn btn-warning disabled">Manual Transaction</button>
            </div>

            <div class="form-group">
                <label for="MaterialTypeSelect">As Material:</label>
                <select id="MaterialTypeSelect" class="form-control disabled">
                    <option value="873218">Pine</option>
                    <option value="873219">Grot</option>
                </select>
            </div>

            <div class="form-group">
                <button class="btn btn-primary disabled">Start</button>
                <button class="btn btn-primary">Stop</button>
                <button class="btn btn-success">Finished</button>
            </div>
        </form>
    </div>

    <div class="col-sm-8">
        <div class="row">
            <div class="jumbotron">
                <h1>Sunnanö Boat Everst #27</h1>

                <div class="row">
                    <div class="col-xs-12">
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" aria-valuenow="70"
                                 aria-valuemin="0" aria-valuemax="100" style="width:70%">
                                <span class="sr-only">70% Complete</span>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="row">
            <div class="col-sm-4"><strong>Expected Material</strong></div>
            <div class="col-sm-8">Grot</div>
        </div>
        <div class="row">
            <div class="col-sm-4"><strong>Est. Weight</strong></div>
            <div class="col-sm-8">1,500 ton</div>
        </div>
        <div class="row">
            <div class="col-sm-4"><strong>Planned arrival</strong></div>
            <div class="col-sm-8">2015-03-18</div>
        </div>

        <br />

        <div class="row">
            <div class="col-sm-4"><strong>Batch</strong></div>
            <div class="col-sm-8">3</div>
        </div>
        <div class="row">
            <div class="col-sm-4"><strong>Started at</strong></div>
            <div class="col-sm-8">2015-03-10 12:55:02</div>
        </div>
        <div class="row">
            <div class="col-sm-4"><strong>Batch time</strong></div>
            <div class="col-sm-8">45 min</div>
        </div>
        <div class="row">
            <div class="col-sm-4"><strong>Transaction time</strong></div>
            <div class="col-sm-8">2 h 37 min</div>
        </div>

    </div>
</div>

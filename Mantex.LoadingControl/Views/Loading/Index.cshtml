@{
    ViewBag.Title = "Lossning";
}
@*<div class="row"><div class="col-sm-12">&nbsp;</div></div>*@
<br />
<div class="row">
    <div class="col-sm-4">

        @*Kontrollpanel*@
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Kontrollpanel</h3>
            </div>
            <div class="panel-body">

                <form role="form">

                    <div class="row">
                        <div class="col-xs-6 col-sm-12">
                            <div class="form-group">
                                <label for="TransactionSelect">Välj Transaktion:</label>
                                <select id="TransactionSelect" class="form-control disabled">
                                    <option value="873218">Sunnanö Båt Everst #27</option>
                                    <option value="873219">Sunnanö Båt Alfred</option>
                                    <option value="873220">Sunnanö Båt Lollipop</option>
                                    <option value="873221">Sunnanö Båt Mandarin #1</option>
                                    <option value="873222">Sunnanö Båt Russian Velvet</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-warning disabled">Ny Transaktion...</button>
                                <button class="btn btn-success">Transaktion Färdig</button>
                            </div>
                        </div>
                        <div class="col-xs-6 col-sm-12">

                            <div class="form-group">
                                <label for="MaterialTypeSelect">Materialtyp:</label>
                                <select id="MaterialTypeSelect" class="form-control disabled">
                                    <option value="1">Gran</option>
                                    <option value="2">Grot</option>
                                    <option value="3">Returflis</option>
                                    <option value="4">Returpapper</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary disabled">Starta</button>
                                <button class="btn btn-primary">Stanna</button>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>

    <div class="col-sm-8">

        @*Produktion rubrik*@
        <div class="jumbotron">
            <h2>Sunnanö Båt Everst #27</h2>
            <div class="row">
                <div class="col-xs-12">
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="70"
                             aria-valuemin="0" aria-valuemax="100" style="width:70%">
                            <span class="sr-only">70% Klar</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body text-center text-success">
                    FlowScanner Arbetar
                </div>
            </div>
        </div>

        <div class="row">
            @*Enligt Transaktion*@
            <div class="col-xs-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Enligt Transaktion</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-6"><strong>&nbsp;</strong></div>
                            <div class="col-xs-6">&nbsp;</div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6"><strong>Ankomst</strong></div>
                            <div class="col-xs-6">2015-03-18</div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6"><strong>Material</strong></div>
                            <div class="col-xs-6">Grot</div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6"><strong>Vikt</strong></div>
                            <div class="col-xs-6">1,500 ton</div>
                        </div>
                    </div>
                </div>
            </div>
            @*Producerat*@
            <div class="col-xs-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Producerat</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-6"><strong>Omgång</strong></div>
                            <div class="col-xs-6">3</div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6"><strong>Startades</strong></div>
                            <div class="col-xs-6">2015-03-10 12:55:02</div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6"><strong>Tid för omgång</strong></div>
                            <div class="col-xs-6">45 min</div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6"><strong>Tid för transaktion</strong></div>
                            <div class="col-xs-6">2 h 37 min</div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
